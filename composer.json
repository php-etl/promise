{
    "name": "php-etl/promise",
    "description": "Promise implementation for ETL usage.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kiboko SAS",
            "homepage": "http://kiboko.fr"
        },
        {
            "name": "Gr√©gory Planchat",
            "email": "gregory@kiboko.fr"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "php-etl/promise-contracts": "^0.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpspec/phpspec": "^7.0",
        "johnkary/phpunit-speedtrap": "*",
        "mybuilder/phpunit-accelerator": "*",
        "phpunit/php-invoker": "*"
    },
    "autoload": {
        "psr-4": {
            "Kiboko\\Component\\Promise\\": "src/"
        },
        "files": [
            "src/promises.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\Kiboko\\Component\\Promise\\": "spec/",
            "unit\\Kiboko\\Component\\Promise\\": "tests/unit/",
            "functional\\Kiboko\\Component\\Promise\\": "tests/functional/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    }
}
